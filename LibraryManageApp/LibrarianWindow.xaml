<Window x:Class="LibraryManageApp.LibrarianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageApp"
        mc:Ignorable="d"
        Title="LibrarianWindow" Height="450" Width="800">
    <Grid Background="#ECECEC">

        <!-- Sidebar -->
        <Border Background="#2D3E50" Width="220" HorizontalAlignment="Left">
            <StackPanel Margin="0,20">

                <!-- Header -->
                <TextBlock Text="LIBRARIAN"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 30"/>

                <!-- Menu Buttons -->
                <Button Content="Book Management"
                        Height="45"
                        FontSize="15"
                        Margin="10 5"
                        Background="#3A7AFE"
                        Foreground="White"
                        BorderThickness="0"
                        Click="OpenBookManagement_Click"/>

                <Button Content="Borrow Management"
                        Height="45"
                        FontSize="15"
                        Margin="10 5"
                        Background="#3A7AFE"
                        Foreground="White"
                        BorderThickness="0"
                        Click="OpenBorrowManagement_Click"/>

                <Button Content="Chat with AI"
        Height="45"
        FontSize="15"
        Margin="10 5"
        Background="#3A7AFE"
        Foreground="White"
        BorderThickness="0"
        Click="OpenChatWindow_Click"/>

                <Button Content="Smart Import"
Height="45"
FontSize="15"
Margin="10 5"
Background="#3A7AFE"
Foreground="White"
BorderThickness="0"
Click="btnSmartImport_Click"/>

                <Button Content="Logout"
                        Height="45"
                        FontSize="15"
                        Margin="10 30 10 5"
                        Background="#DD4444"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Logout_Click"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Margin="240,20,20,20" Background="White" >
            <StackPanel Margin="20">
                <TextBlock Text="Dashboard"
                           FontSize="26"
                           FontWeight="Bold"
                           Margin="0 0 0 10"/>

                <TextBlock Text="Welcome to the librarian control panel."
                           FontSize="14"
                           Foreground="#555"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
