<Window x:Class="LibraryManageApp.AddFineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageApp"
        mc:Ignorable="d"
        Title="AddFineWindow" Height="450" Width="800">
    <StackPanel Margin="20">

        <TextBlock Text="Amount" />
        <TextBox x:Name="txtAmount" Margin="0 5" />

        <TextBlock Text="Reason" />
        <TextBox x:Name="txtReason" Margin="0 5" />

        <Button Content="Confirm" Margin="0 15 0 0"
                HorizontalAlignment="Right"
                Width="100"
                Click="Confirm_Click"/>
    </StackPanel>
</Window>
