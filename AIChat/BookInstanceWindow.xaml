<Window x:Class="LibraryManageProgram.BookInstanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageProgram"
        mc:Ignorable="d"
        Title="BookInstanceWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <DataGrid x:Name="dgInstances" AutoGenerateColumns="False" DockPanel.Dock="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding InstanceId}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0 10 0 0">
            <Button Content="Add" Width="80" Margin="0 0 10 0" Click="Add_Click"/>
            <Button Content="Remove" Width="80" Margin="0 0 10 0" Click="Remove_Click"/>
            <Button Content="Save" Width="80" Click="Save_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
