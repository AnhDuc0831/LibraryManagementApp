<Window x:Class="LibraryManageApp.SmartImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Import Chat - Tìm kiếm và Nhập sách AI" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2563EB" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📚 AI Smart Import" Foreground="White" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text=" | Trợ lý tìm kiếm nguồn sách" Foreground="#B3CDE0" FontSize="16" Margin="10,2,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                <ScrollViewer x:Name="scrollViewerChat" VerticalScrollBarVisibility="Auto" Margin="5">
                    <StackPanel x:Name="pnlChatHistory" VerticalAlignment="Bottom">
                        <Border Background="#EFF6FF" CornerRadius="10" Padding="10" Margin="5" HorizontalAlignment="Left" MaxWidth="300">
                            <TextBlock Text="Bot: Chào bạn! Hãy nhập chủ đề sách bạn muốn tìm (Ví dụ: 'Sách bán chạy nhất về Marketing 2024')." TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Danh sách sách đề xuất:" FontWeight="SemiBold" Margin="10" Foreground="#4B5563"/>

                <DataGrid x:Name="dgResults" Grid.Row="1" Margin="10,0,10,10" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          Background="White" BorderBrush="#E5E7EB"
                          RowHeight="35">

                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}" Width="50"/>

                        <DataGridTextColumn Header="Tên sách" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Tác giả" Binding="{Binding AuthorName}" Width="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Thể loại" Binding="{Binding Category}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Năm" Binding="{Binding PublishYear}" Width="60" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Giá (VNĐ)" Binding="{Binding Price, StringFormat=N0}" Width="100" IsReadOnly="True"/>
                    </DataGrid.Columns>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
                    <TextBlock x:Name="lblStatus" Text="" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Green" FontWeight="Bold"/>
                    <Button x:Name="btnSaveToDB" Content="Lưu sách đã chọn vào CSDL" 
                            Height="35" Padding="15,0"
                            Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0"
                            Click="btnSaveToDB_Click" Cursor="Hand" IsEnabled="False">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Background="White" Padding="10" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtInput" Grid.Column="0" Height="40" FontSize="16" 
                         Padding="10,8" VerticalContentAlignment="Center"
                         BorderThickness="1" BorderBrush="#D1D5DB"
                         KeyDown="txtInput_KeyDown"
                         Tag="Nhập yêu cầu tìm kiếm..."/>

                <Button x:Name="btnSend" Grid.Column="1" Content="🔍 Tìm kiếm" Width="100" Margin="10,0,0,0"
                        Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="btnSend_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>