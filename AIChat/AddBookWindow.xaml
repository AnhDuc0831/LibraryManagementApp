<Window x:Class="LibraryManageProgram.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageProgram"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="450" Width="800">
    <StackPanel Margin="20">

        <TextBlock Text="Title"/>
        <TextBox x:Name="txtTitle" Margin="0 5"/>

        <TextBlock Text="Author"/>
        <ComboBox x:Name="cbAuthor"
                  DisplayMemberPath="FullName"
                  SelectedValuePath="AuthorId"
                  Margin="0 5"/>

        <TextBlock Text="Publish Year"/>
        <TextBox x:Name="txtYear" Margin="0 5"/>

        <TextBlock Text="Quantity"/>
        <TextBox x:Name="txtQty" Margin="0 5"/>

        <TextBlock Text="Price"/>
        <TextBox x:Name="txtPrice" Margin="0 5"/>

        <TextBlock Text="Category"/>
        <ComboBox x:Name="cbCategory" Margin="0 5"/>

        <Button Content="Confirm" Margin="0 10" Click="Confirm_Click"/>
    </StackPanel>
</Window>
