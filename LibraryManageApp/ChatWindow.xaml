<Window x:Class="LibraryManageApp.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Trợ lý Thư viện AI" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#F0F2F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Input Area -->
        </Grid.RowDefinitions>

        <!-- 1. Header -->
        <Border Grid.Row="0" Background="#2563EB" Padding="15">
            <TextBlock Text="AI Library Assistant" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- 2. Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <!-- Chat History -->
                <ColumnDefinition Width="*"/>
                <!-- Data Grid Result -->
            </Grid.ColumnDefinitions>

            <!-- Left Side: Chat History -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                <ScrollViewer x:Name="scrollViewerChat" VerticalScrollBarVisibility="Auto" Margin="5">
                    <StackPanel x:Name="pnlChatHistory" VerticalAlignment="Bottom">
                        <!-- Tin nhắn sẽ được thêm vào đây bằng Code-Behind -->
                        <TextBlock Text="Bot: Xin chào! Tôi có thể giúp gì cho bạn?" 
                                   TextWrapping="Wrap" Padding="10" Margin="5" Background="#EFF6FF"  />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Side: Data Result -->
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Kết quả truy vấn dữ liệu:" FontWeight="SemiBold" Margin="10" Foreground="#4B5563"/>

                <DataGrid x:Name="dgResults" Grid.Row="1" Margin="10,0,10,10" 
                          AutoGenerateColumns="True" IsReadOnly="True" 
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          Background="White" BorderBrush="#E5E7EB">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- 3. Input Area -->
        <Border Grid.Row="2" Background="White" Padding="10" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtInput" Grid.Column="0" Height="40" FontSize="16" 
                         Padding="10,8" VerticalContentAlignment="Center"
                         BorderThickness="1" BorderBrush="#D1D5DB"
                         KeyDown="txtInput_KeyDown"
                         Tag="Nhập câu hỏi của bạn (Ví dụ: Tìm sách của Nguyễn Nhật Ánh)..."/>

                <Button x:Name="btnSend" Grid.Column="1" Content="Gửi" Width="80" Margin="10,0,0,0"
                        Background="#2563EB" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="btnSend_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>