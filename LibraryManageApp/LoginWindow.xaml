<Window x:Class="LibraryManageApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="570" Width="800">
    <Grid Background="#F4F4F4" Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Width="478" Height="374">

            <!-- Hiệu ứng shadow hợp lệ -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Library Login"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <!-- Username -->
                <TextBlock Text="Username" Margin="0 0 0 5"/>
                <TextBox x:Name="txtUsername"
                         Height="35"
                         FontSize="14"
                         Padding="8"/>

                <!-- Password -->
                <TextBlock Text="Password" Margin="0 15 0 5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="35"
                             FontSize="14"
                             Padding="8"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        Margin="0 25 0 0"
                        FontSize="16"
                        Background="#3A7AFE"
                        Foreground="White"
                        Click="Login_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
