<Window x:Class="LibraryManageProgram.BookManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageProgram"
        mc:Ignorable="d"
        Title="BookManagementWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <DataGrid ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author.FullName}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Year" Binding="{Binding PublishYear}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBox Text="{Binding SelectedBook.Title}" Margin="0 5" />
            <ComboBox ItemsSource="{Binding Authors}"
                  SelectedValuePath="AuthorId"
                  DisplayMemberPath="FullName"
                  SelectedValue="{Binding SelectedBook.AuthorId}"
                  Margin="0 5"/>
            <TextBox Text="{Binding SelectedBook.PublishYear}" Margin="0 5" />
            <TextBox Text="{Binding SelectedBook.Quantity}" Margin="0 5" MouseDoubleClick="EditInstances_Click" IsReadOnly="True"/>
            <TextBox Text="{Binding SelectedBook.Price}" Margin="0 5" />
            <ComboBox ItemsSource="{Binding Categories}"
              SelectedItem="{Binding SelectedBook.Category}"
              Margin="0 5" />   

            <Button Content="Add" Margin="0 5" Click="Add_Click"/>
            <Button Content="Update" Margin="0 5" Click="Update_Click"/>
            <Button Content="Delete" Margin="0 5" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
