 <Window x:Class="LibraryManageApp.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student - Search and Borrow History" Height="700" Width="1000">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Tìm sách">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search + paging controls -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
                        <Label Content="Tìm:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtSearch" Width="360" Margin="6,0"/>
                        <Label Content="Theo:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                        <ComboBox x:Name="cboCriteria" Width="120" Margin="6,0">
                            <ComboBoxItem Content="Title" IsSelected="True"/>
                            <ComboBoxItem Content="Author"/>
                            <ComboBoxItem Content="Category"/>
                        </ComboBox>
                        <Button x:Name="btnSearch" Content="Tìm" Width="80" Margin="12,0" Click="BtnSearch_Click"/>

                        <Label Content="Page size:" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <ComboBox x:Name="cboPageSize" Width="80" Margin="6,0" SelectionChanged="CboPageSize_SelectionChanged">
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10" IsSelected="True"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                        </ComboBox>

                        <Button x:Name="btnPrevPage" Content="◀" Width="36" Margin="12,0" Click="BtnPrevPage_Click"/>
                        <TextBlock x:Name="lblPageInfo" VerticalAlignment="Center" Margin="6,0" Text="Trang 0/0"/>
                        <Button x:Name="btnNextPage" Content="▶" Width="36" Margin="6,0" Click="BtnNextPage_Click"/>
                    </StackPanel>

                    <!-- Advanced filters -->
                    <Expander Header="Advanced filters" Grid.Row="1" IsExpanded="False" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6">
                            <Label Content="Author:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="cboFilterAuthor" Width="180" Margin="6,0"/>
                            <Label Content="Category:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                            <ComboBox x:Name="cboFilterCategory" Width="160" Margin="6,0"/>
                            <Label Content="Year:" VerticalAlignment="Center" Margin="12,0,0,0"/>
                            <TextBox x:Name="txtYearFrom" Width="60" Margin="6,0" ToolTip="From year"/>
                            <Label Content="-" VerticalAlignment="Center" Margin="4,0"/>
                            <TextBox x:Name="txtYearTo" Width="60" Margin="4,0" ToolTip="To year"/>
                            <CheckBox x:Name="chkAvailableOnly" Content="Chỉ sách còn sẵn" Margin="12,0"/>
                            <Button x:Name="btnClearFilters" Content="Xóa" Width="80" Margin="12,0" Click="BtnClearFilters_Click"/>
                        </StackPanel>
                    </Expander>

                    <!-- Results -->
                    <DataGrid x:Name="dgBooks" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Cover" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding CoverImagePath}" Width="50" Height="70" Stretch="UniformToFill"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                            <DataGridTextColumn Header="Publish Year" Binding="{Binding PublishYear}" Width="120"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Available" Binding="{Binding AvailableCount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Lịch sử mượn">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
                        <Label Content="Student Code:" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtStudentCode" Width="220" Margin="6,0"/>
                        <Button x:Name="btnLoadHistory" Content="Tải lịch sử" Width="120" Margin="12,0" Click="BtnLoadHistory_Click"/>
                        <TextBlock x:Name="lblStudentName" Margin="12,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>

                    <DataGrid x:Name="dgHistory" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Borrow Date" Binding="{Binding BorrowDate}" Width="120"/>
                            <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Book Title" Binding="{Binding BookTitle}" Width="2*"/>
                            <DataGridTextColumn Header="Instance ID" Binding="{Binding InstanceId}" Width="100"/>
                            <DataGridTextColumn Header="Librarian" Binding="{Binding LibrarianName}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>