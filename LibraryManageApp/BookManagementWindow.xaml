<Window x:Class="LibraryManageApp.BookManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageApp"
        mc:Ignorable="d"
        Title="Book Management" Height="550" Width="1000"
        Background="#F0F4F8">

    <Window.Resources>
        <!-- Style cho TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#B3D4E5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C5282"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4299E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#B3D4E5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C5282"/>
        </Style>

        <!-- Style cho Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3182CE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C5282"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E53E3E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C53030"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#B3D4E5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternatingRowBackground" Value="#EBF8FF"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style x:Key="DataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C5282"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#4299E1"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BEE3F8"/>
                    <Setter Property="Foreground" Value="#1A365D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C5282" CornerRadius="10,10,0,0" Padding="20,15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📚 Book Management System" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                <TextBlock Text="Manage your library collection efficiently" 
                          FontSize="13" 
                          Foreground="#B3D4E5" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*" />
                <ColumnDefinition Width="1.3*" />
            </Grid.ColumnDefinitions>

            <!-- DataGrid Section -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#90CDF4" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Book List" 
                              Style="{StaticResource FieldLabel}"
                              FontSize="16"
                              Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Books}"
                              SelectedItem="{Binding SelectedBook}"
                              AutoGenerateColumns="False"
                              Style="{StaticResource ModernDataGrid}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeader}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Author" Binding="{Binding Author.FullName}" Width="140" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding PublishYear}" Width="70" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Form Section -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20"
                    Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#90CDF4" Opacity="0.3" BlurRadius="15" ShadowDepth="0"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Book Details" 
                                  Style="{StaticResource FieldLabel}"
                                  FontSize="16"
                                  Margin="0,0,0,20"/>

                        <TextBlock Text="Title" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding SelectedBook.Title}" 
                                Style="{StaticResource ModernTextBox}"
                                Margin="0,0,0,15" />

                        <TextBlock Text="Author" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Authors}"
                                 SelectedValuePath="AuthorId"
                                 DisplayMemberPath="FullName"
                                 SelectedValue="{Binding SelectedBook.AuthorId}"
                                 Style="{StaticResource ModernComboBox}"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Publish Year" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding SelectedBook.PublishYear}" 
                                Style="{StaticResource ModernTextBox}"
                                Margin="0,0,0,15" />

                        <TextBlock Text="Quantity (Double-click to edit)" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding SelectedBook.Quantity}" 
                                Style="{StaticResource ModernTextBox}"
                                MouseDoubleClick="EditInstances_Click" 
                                IsReadOnly="True"
                                Cursor="Hand"
                                Margin="0,0,0,15"/>

                        <TextBlock Text="Price" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding SelectedBook.Price}" 
                                Style="{StaticResource ModernTextBox}"
                                Margin="0,0,0,15" />

                        <TextBlock Text="Category" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedBook.Category}"
                                 Style="{StaticResource ModernComboBox}"
                                 Margin="0,0,0,25" />

                        <Button Content="➕ Add Book" 
                               Style="{StaticResource PrimaryButton}"
                               Click="Add_Click"
                               Margin="0,0,0,10"/>
                        <Button Content="✏️ Update Book" 
                               Style="{StaticResource PrimaryButton}"
                               Click="Update_Click"
                               Margin="0,0,0,10"/>
                        <Button Content="🗑️ Delete Book" 
                               Style="{StaticResource DeleteButton}"
                               Click="Delete_Click"
                               Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>